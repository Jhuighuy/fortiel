!!
#@macro let
#@pattern ^(?P<type>.*)::\s*(?P<name>[a-zA-Z]\w*)$
#@channel '__LET__'
  `type.strip()` :: `name.strip()`
#@end channel
#@pattern ^(?P<type>.*)::\s*(?P<name>[a-zA-Z]\w*)\s*=\s*(?P<init>.+)$
#@channel '__LET__'
  `type.strip()` :: `name.strip()`
#@end channel
`name.strip()` = `init.strip()`
#@end macro let

!!
#@macro construct if
#@pattern ^\((?P<condition>.*)\)\s*then$
  if (`condition.strip()`) then
    block
      #@flush '__LET__', ''
#@section else_if
#@pattern ^\((?P<condition>.*)\)\s*then$
    end block
  else if (`condition.strip()`) then
    block
      #@flush '__LET__', ''
#@section once else
#@pattern ^$
    end block
  else
    block
      #@flush '__LET__', ''
#@finally
    end block
  end if
#@end macro if

#@mutate ^\s*@\s*if\b to #@call construct if
#@mutate ^\s*@\s*else\s*if\b to #@section else_if
#@mutate ^\s*@\s*else\b to #@section else
#@mutate ^\s*@\s*end\s*if\b to #@end call if

!!
#@macro construct do
#@pattern ^(?P<index>[a-zA-Z]\w*)\s*=\s*(?P<bounds>.*)$
  do `index.strip()` = `bounds.strip()`
    block
      #@flush '__LET__', ''
    end block
  end do
#@pattern ^(?P<type>.*)::\s*(?P<index>[_a-zA-Z]\w*)\s*=\s*(?P<bounds>.*)$
  block
    `type.strip()` :: `index.strip()`
    do `index.strip()` = `bounds.strip()`
      block
        #@flush '__LET__', ''
      end block
    end do
  end block
#@end macro do

#@mutate ^\s*@\s*do\b to #@call construct do
#@mutate ^\s*@\s*end\s*do\b to #@end call do
